  },
  "dependencies": {
    "@buildd/shared": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": ">=0.2.49"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.0"
  }
}
