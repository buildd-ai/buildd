{
  "name": "@buildd/local-ui",
  "version": "0.13.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:css": "tailwindcss -i ui/input.css -o ui/styles.css --watch",
    "build:css": "tailwindcss -i ui/input.css -o ui/styles.css --minify",
    "prestart": "tailwindcss -i ui/input.css -o ui/styles.css --minify",
    "start": "bun src/index.ts",
    "test": "bun test __tests__/unit",
    "test:unit": "bun test __tests__/unit",
    "test:integration": "bun test __tests__/integration.test.ts",
    "test:integration-config": "bun test __tests__/integration-config.test.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.50",
    "@buildd/shared": "workspace:*",
    "marked": "^17.0.3",
    "pusher-js": "^8.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.9",
    "tailwindcss": "^3.4.19"
  }
}
